<h1>メンバーになる</h1>

<% if @user.errors.any? %>
  <div class="error_explanation">
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<%= form_with(model: @user, local:true) do |f| %>
  <%= f.label :名前 %>
  <%= f.text_field :name %>
  <%= f.label :メール %>
  <%= f.email_field :email %>
  <%= f.label :パスワード %>
  <%= f.password_field :password %>
  <%= f.label :パスワード（確認用） %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "作成" %>

  <% end %>
